<tr>
  <td style="padding: 26px 32px 18px 32px;">
    <p style="margin:0 0 6px 0; font-family: Arial, sans-serif; font-size:12px; letter-spacing:1px; text-transform:uppercase; color:#5b7bfc;">Delivery complete</p>
    <h1 style="margin:0 0 10px 0; font-family: Arial, sans-serif; font-size:22px; line-height:1.3; color:#102347;">Order {{order.shortId}} delivered to {{user.name}}</h1>
    <p style="margin:0 0 16px 0; font-family: Arial, sans-serif; font-size:14px; line-height:1.6; color:#333333;">This order has been marked as delivered.</p>
  </td>
</tr>

<tr>
  <td style="padding: 0 32px 4px 32px;">
    <table width="100%" cellpadding="0" cellspacing="0" border="0" role="presentation" style="background-color:#f4f7ff; border-radius:10px; overflow:hidden;">
      <tr>
        <td style="padding:12px 14px; font-family: Arial, sans-serif; font-size:14px; color:#102347; font-weight:700;">Order ID</td>
        <td align="right" style="padding:12px 14px; font-family: Arial, sans-serif; font-size:14px; color:#102347; font-weight:700;">{{order.shortId}}</td>
      </tr>
      <tr>
        <td style="padding:8px 14px; font-family: Arial, sans-serif; font-size:13px; color:#4b5563;">Delivered on</td>
        <td align="right" style="padding:8px 14px; font-family: Arial, sans-serif; font-size:13px; color:#4b5563;">{{formatDateTime order.deliveredAt}}</td>
      </tr>
      <tr>
        <td style="padding:8px 14px 12px 14px; font-family: Arial, sans-serif; font-size:13px; color:#4b5563;">Customer</td>
        <td align="right" style="padding:8px 14px 12px 14px; font-family: Arial, sans-serif; font-size:13px; color:#102347; font-weight:700;">{{user.name}}</td>
      </tr>
    </table>
  </td>
</tr>

<tr>
  <td style="padding: 12px 32px 0 32px;">
    {{> order_items_table }}
  </td>
</tr>

<tr>
  <td style="padding: 6px 32px 0 32px;">
    <h3 style="margin: 0 0 8px 0; font-family: Arial, sans-serif; font-size:16px; line-height:1.4; color:#102347;">Delivery address</h3>
    <p style="margin:0 0 10px 0; font-family: Arial, sans-serif; font-size:14px; line-height:1.6; color:#4b5563;">
      {{order.address.fullName}}<br />
      {{order.address.line1}} {{order.address.line2}}<br />
      {{order.address.city}} {{order.address.zip}}<br />
      Phone: {{order.address.phone}}
    </p>
  </td>
</tr>

{{#if adminUrl}}
<tr>
  <td style="padding: 6px 32px 10px 32px;">
    <table role="presentation" cellpadding="0" cellspacing="0" border="0" style="margin: 18px 0 4px 0;">
      <tr>
        <td align="center" style="border-radius: 6px; background: linear-gradient(90deg,#3b82f6,#6366f1);">
          <a href="{{adminUrl}}" style="display:inline-block; padding: 10px 24px; font-family: Arial, sans-serif; font-size:14px; color:#ffffff; text-decoration:none; font-weight:600;">View in dashboard</a>
        </td>
      </tr>
    </table>
  </td>
</tr>
{{/if}}

<tr>
  <td style="padding: 0 32px 24px 32px;">
    <p style="margin: 8px 0 0 0; font-family: Arial, sans-serif; font-size:13px; line-height:1.6; color:#6b7280;">This message serves as a delivery record for the team.</p>
  </td>
</tr>
